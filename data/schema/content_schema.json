{
    "Publications": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "title": { "type": "string" },
        "abstract": { "type": "string" },
        "publication_date": { "type": "string", "format": "date-time" },
        "authors": { "type": "array", "items": { "type": "string" } },
        "doi": { "type": "string" },
        "publisher": { "type": "string" },
        "url": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "related_concepts": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "publication_date"]
    },
    "Authors": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "orcid": { "type": "string" },
        "affiliation": { "type": "array", "items": { "type": "string" } },
        "publications": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name"]
    },
    "Institutions": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "country": { "type": "string" },
        "publications": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name"]
    },
    "Concepts": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "publications": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name"]
    }
  }
  