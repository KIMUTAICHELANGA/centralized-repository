{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Content Schema",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "author": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "published_date": {
            "type": ["string", "null"],  // Allowing null for unpublished dates
            "format": "date"
        },
        "content_type": {
            "type": "string"
        },
        "abstract": {
            "type": "string"
        },
        "image_url": {
            "type": ["string", "null"]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": ["title", "author", "published_date", "content_type", "abstract", "created_at"]
}
